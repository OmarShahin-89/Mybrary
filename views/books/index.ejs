<style>
body{
     background: linear-gradient(to right, #3a7bd5, #3a6073)
 }
</style>
<div class='container'>
    <h2>Search Books</h2>
    <form action="/books" method="GET">
        <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="title">Book Title</label>
                    <input name="title" type="text" class="form-control" id="title"  value="<%= searchOptions.title %>">
                </div>
                <div class="form-group col-md-4">
                    <label for="publishedAfter">Published After</label>
                    <input class="form-control" id="publishedAfter" name="publishedAfter" type="date" value="<%= searchOptions.publishedAfter %>">
                </div>
                <div class="form-group col-md-4">
                    <label for="publishedBefore">Published Before</label>
                    <input class="form-control" id="publishedBefore" name="publishedBefore" type="date" value="<%= searchOptions.publishedBefore %>">
                </div>
        </div>
        <button type="submit"  class="btn btn-outline-info">Search</button>
    </form>

    <br>
    <div class="row">
        <% books.forEach(book=>{ %> 
            <div class="col-sm-6 col-md-4 col-lg-3">
                <img  class="img-thumbnail" src="<%= book.coverImagePath %>" alt="" height="150" width="100">
            </div>
        <%})%>
    </div>
</div>